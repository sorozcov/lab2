<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#0AACDE">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:text="Happy Restaurant"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="casual" android:textSize="30sp"
            app:layout_constraintVertical_bias="0.62"
            android:id="@+id/textView" android:textColor="#E6170C"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="207dp" app:srcCompat="@drawable/cj"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintVertical_bias="0.962"/>
    <Button
            android:text="Mostrar Menu"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/showMenu" android:backgroundTint="#F1F109"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintHorizontal_bias="0.506"/>
    <Button
            android:text="Ver Pedido"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:id="@+id/showOrder" android:backgroundTint="#F1F109" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/showMenu" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>