<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Order" android:background="#0AACDE">

    <Button
            android:text="Hacer Pedido"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/sendOrder" android:backgroundTint="#F1F109"
            android:layout_marginEnd="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mainButton2"/>
    <Button
            android:text="Limpiar Pedido"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/deleteOrder" android:backgroundTint="#F1F109"
            app:layout_constraintEnd_toStartOf="@+id/sendOrder"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/mainButton2"/>
    <TextView
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:text="Pedido"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:fontFamily="casual" android:textSize="30sp"
            android:id="@+id/textView3" android:textColor="#E6170C"
            app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="28dp"
    />
    <Button
            android:text="Inicio"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:id="@+id/mainButton2" android:backgroundTint="#F1F109"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
    />
    <ListView
            android:layout_width="368dp"
            android:layout_height="317dp" android:layout_marginBottom="52dp"
            app:layout_constraintBottom_toTopOf="@+id/mainButton2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:id="@+id/orderList"/>
</android.support.constraint.ConstraintLayout>